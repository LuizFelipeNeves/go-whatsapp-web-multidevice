# WhatsApp Multi-Platform Environment Configuration

# =========================
# API GATEWAY SETTINGS
# =========================
NODE_ENV=production
API_PORT=3000
JWT_SECRET=whatsapp_jwt_secret_key_change_this_in_production

# =========================
# AUTHENTICATION
# =========================
API_AUTH_ENABLED=true
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD=admin123

# =========================
# DOCKER SETTINGS
# =========================
DOCKER_SOCKET=/var/run/docker.sock
WHATSAPP_IMAGE_NAME=whatsapp-multidevice
NETWORK_NAME=whatsapp_network

# =========================
# CONTAINER PORTS
# =========================
CONTAINER_PORT_START=4000
CONTAINER_PORT_END=4999

# =========================
# PATHS
# =========================
VOLUMES_BASE_PATH=./volumes
CONFIG_PATH=./config
LOGS_PATH=./logs

# =========================
# NGINX SETTINGS
# =========================
NGINX_PORT=80
NGINX_HTTPS_PORT=443

# =========================
# QUEUE SETTINGS
# =========================
QUEUE_CONCURRENCY=3
QUEUE_INTERVAL_MS=1000
QUEUE_TIMEOUT_MS=25000

# =========================
# QR CODE SETTINGS
# =========================
QR_CLEANUP_INTERVAL_HOURS=2
QR_EXPIRY_MINUTES=5

# =========================
# UPDATE MANAGER
# =========================
UPDATE_CHECK_ENABLED=true
UPDATE_CHECK_HOUR=2
UPDATE_CHECK_MINUTE=0

# =========================
# LOGGING
# =========================
LOG_LEVEL=info
LOG_FILE_ENABLED=true
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
